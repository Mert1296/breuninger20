    <script type="text/javascript">

            function pruefen(){
                var f = document.neuerUser;
                var fehler = "";

                if (f.password.value !== f.password2.value){
                    fehler += "Die eingegebenen Passwörter stimmen nicht überein";
                }

                if (fehler != ""){
                    var fehlertext = "";
                    fehlertext += fehler;
                    alert(fehlertext + "");
                    return false;
                }
                return true;
            }
    </script>
